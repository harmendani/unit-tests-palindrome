{
  "name": "unit-tests-palindrome",
  "version": "1.0.0",
  "description": "Check palindromes with unit tests",
  "main": "app.js",
  "scripts": {
    "test": "mocha src/tests/*.spec.js",
    "prepare": "husky install",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harmendani/unit-tests-palindrome.git"
  },
  "keywords": [
    "palindrome",
    "checker",
    "tests",
    "tdd"
  ],
  "author": "Pedro Harmendani <harmendani26@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harmendani/unit-tests-palindrome/issues"
  },
  "homepage": "https://github.com/harmendani/unit-tests-palindrome#readme",
   "nyc":{
    "check-coverage": true,
    "include": "src",
    "exclude": "*.spec.js",
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99
   },
  "devDependencies": {
    "chai": "^4.3.6",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0"
  }
}
